@using Jabiss.Web.Models.Products
@model EditProductViewModel

@{
    Layout = "~/Views/Shared/_AdminPanelLayout.cshtml";
}

<h4>Edit Product</h4>

@if (ViewData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@ViewData["ErrorMessage"]</div>
}

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>

    <div class="mb-3">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" type="number" step="0.01" />
    </div>

    <div class="mb-3">
        <label asp-for="Stock"></label>
        <input asp-for="Stock" class="form-control" type="number" />
    </div>

    <div class="mb-3">
        <label asp-for="CategoryId"></label>
        <select asp-for="CategoryId" class="form-control" asp-items="@(new SelectList(ViewBag.Categories, "Id", "Name"))"></select>
    </div>

    <div class="mb-3">
        <label>Images</label>
        <div id="imageContainer">
            @for (int i = 0; i < Model.Images.Count; i++)
            {
                <div class="image-wrapper" style="display:inline-block; margin:5px; position:relative;">
                    <img src="@Model.Images[i].ImageBase64" style="width:100px;" />
                    <button type="button" class="btn btn-danger btn-sm delete-image" style="position:absolute; top:5px; right:5px;">X</button>
                    <input type="hidden" name="Images[@i].Id" value="@Model.Images[i].Id" />
                    <input type="hidden" name="Images[@i].ImageBase64" value="@Model.Images[i].ImageBase64" />
                </div>
            }
        </div>

        <button type="button" id="addImage" class="btn btn-secondary mt-2">Add Photo</button>
        <input type="file" id="imageInput" style="display:none;" accept="image/*" />
    </div>

    <button type="submit" class="btn btn-success">Save</button>
</form>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <script>
        $('#addImage').click(function () { $('#imageInput').click(); });

        $('#imageInput').change(function (e) {
            const file = e.target.files[0];
            if (!file) return;
            const reader = new FileReader();
            reader.onload = function (ev) {
                const dataUri = ev.target.result; // "data:image/...;base64,...."
                const index = $('#imageContainer .image-wrapper').length;
                const html = `
                            <div class="image-wrapper" style="display:inline-block; margin:5px; position:relative;">
                                <img src="${dataUri}" style="width:100px;" />
                                <button type="button" class="btn btn-danger btn-sm delete-image" style="position:absolute; top:5px; right:5px;">X</button>
                                <input type="hidden" name="Images[${index}].Id" value="0" />
                                <input type="hidden" name="Images[${index}].ImageBase64" value="${dataUri}" />
                            </div>`;
                $('#imageContainer').append(html);
            };
            reader.readAsDataURL(file);
        });

        $(document).on('click', '.delete-image', function () {
            $(this).closest('.image-wrapper').remove();
            // re-index names
            $('#imageContainer .image-wrapper').each(function (i) {
                $(this).find('input[name$=".Id"]').attr('name', `Images[${i}].Id`);
                $(this).find('input[name$=".ImageBase64"]').attr('name', `Images[${i}].ImageBase64`);
            });
        });
    </script>
}
