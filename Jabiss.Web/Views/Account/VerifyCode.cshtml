@model Jabiss.Web.Models.Account.VerifyCodeViewModel

@{
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <h2 class="mb-4 text-center">✅ Email Verification</h2>

            <form asp-action="VerifyCode" asp-controller="Account" method="post">
                <div class="mb-3">
                    <label asp-for="Email" class="form-label">Email</label>
                    <input asp-for="Email" class="form-control" type="email" readonly />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Code" class="form-label">6-digit Code</label>
                    <input asp-for="Code" class="form-control" inputmode="numeric" maxlength="6" />
                    <span asp-validation-for="Code" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary w-100">Confirm</button>
            </form>

            <div class="text-center mt-3">
                <a asp-controller="Account" asp-action="SignUp" class="text-decoration-none">
                    Use a different email
                </a>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
